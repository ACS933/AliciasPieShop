@model PieListViewModel

@{
    Layout = "_Layout";
    // we don't need to specify the full path to _Layout because views/shared is a 'known folder' to c# MVC
    // we don't need to specify the file extension .cshtml for the same reason
    // this code is redundant now that we have our _ViewStart.cshtml file
}

<h1>@Model.CurrentCategory</h1>
<div class="row row-cols-1 row-cols-md-3 g-4">
@foreach(var pie in Model.Pies)
{
    <partial name="_PieCard" model="pie" />
}
</div>