@model Order

<form asp-action="Checkout" method="post" role="form">
    <h3 class="my-5">
        this is a real pie of a delivery! one more step to deposit it over long off (and to your door!)
    </h3>

    <div class="col-6">
        <div class="row g-2">

            <div class="col-12">
                <label asp-for="FirstName" class="form-label"></label>
                <input asp-for="FirstName" class="form-control" />
            </div>

            <div class="col-12">
                <label asp-for="LastName" class="form-label"></label>
                <input asp-for="LastName" class="form-control" />
            </div>

            <div class="col-12">
                <label asp-for="AddressLine1" class="form-label"></label>
                <input asp-for="AddressLine1" class="form-control" />
            </div>

            <div class="col-12">
                <label asp-for="AddressLine2" class="form-label"></label>
                <input asp-for="AddressLine2" class="form-control" />
            </div>

            <div class="col-6">
                <label asp-for="City" class="form-label"></label>
                <input asp-for="City" class="form-control" />
            </div>

            <div class="col-6">
                <label asp-for="Region" class="form-label"></label>
                <input asp-for="Region" class="form-control" />
            </div>

            <div class="col-6">
                <label asp-for="PostCode" class="form-label"></label>
                <input asp-for="PostCode" class="form-control" />
            </div>

            <div class="col-6">
                <label asp-for="Country" class="form-label"></label>
                <input asp-for="Country" class="form-control" />
            </div>

            <div class="col-12">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" class="form-control" />
            </div>

            <div class="col-12">
                <label asp-for="PhoneNumber" class="form-label"></label>
                <input asp-for="PhoneNumber" class="form-control" />
            </div>

            @{ // we create a label (text) and input (text input field) for all the properties of the order domain class
               // we can also generate a submit button in raw HTML, which is what the below <div> block is doing
             }

             <div class="mt-2">
                 <div class="col-md-offset-2 col-md-5">
                     <input type="submit" class="btn btn-secondary" value="Complete Order" />
                 </div>
             </div>

        </div>
    </div>
</form>